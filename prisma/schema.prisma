generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id          String       @id @default(cuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  messages    Message[]
  shareTokens ShareToken[]
}

model Message {
  id        String   @id @default(cuid())
  threadId  String
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  role      String   // "user" | "assistant"
  content   String   @db.Text // User message or consensus for assistant

  // Raw responses stored as JSON strings
  gptResponse    String?  @db.Text
  claudeResponse String?  @db.Text
  mergeResult    String?  @db.Text // Full MergeResult as JSON
  arbiterReview  String?  @db.Text

  // Metadata
  mode           String   // "council" | "gpt-only" | "claude-only" | "degraded"
  tokensUsed     Int      @default(0)
  estimatedCost  Float    @default(0)

  createdAt DateTime @default(now())

  @@index([threadId])
}

model ShareToken {
  id        String   @id @default(cuid())
  threadId  String
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)
  token     String   @unique
  createdAt DateTime @default(now())

  @@index([token])
}
